<% if notice %>
    <div class="alert alert-success alert-dismissible fade show w-md-25 w-75 custom-alert" role="alert">
        <strong><%= notice %></strong>
         <button type="button" class="btn btn-sm btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>
<% if alert %>
    <div class="alert alert-danger alert-dismissible fade show w-md-25 w-75 custom-alert" role="alert">
        <strong><%= alert %></strong>
        <button type="button" class="btn btn-sm btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>