<div class="col-12 col-md-10 offset-md-1 mb-2">
    <div class="card bg-light p-3 m-0">
        <div class="row gy-3 gy-md-0 align-items-md-center">
            <div class="col-md-3">
                <% if buyer.profile_photo.attached? %>
                        <%= image_tag buyer.profile_photo, class: 'rounded', alt: 'lead', height: '200', width: '200' %>
                <% else %>
                    <%= image_tag 'profile_photo.png', class: 'rounded', alt: 'lead', height: '200', width: '200' %>
                <% end %>
            </div>
            <div class="col-md-9">
                <div class="card-body p-0">
                    <h2 class="card-title fs-5 h4 mb-3">
                        <a class="link-primary text-decoration-none"
                            href="<%= buyer_path(buyer) %>">
                            <%= buyer.first_name %> <%= buyer.last_name %>
                        </a>
                    </h2>
                    <p class="card-text fs-7 lead"><%= buyer.position %> . <%= buyer.city %></p> 
                    <p class="card-text fs-6 lead">
                        <%= truncate(buyer.bio, length: 100) %>
                    </p>
                    <h5><span class="badge badge-outline-primary"><%= buyer.industry %></span></h5>
                </div>
            </div>
        </div>
    </div>
</div>